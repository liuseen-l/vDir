{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "webworker"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@vuedir/core": [
        "./packages/core/index.ts"
      ],
      "@vuedir/core/*": [
        "./packages/core/*"
      ],
      "@vuedir/shared": [
        "./packages/shared/index.ts"
      ],
      "@vuedir/shared/*": [
        "./packages/shared/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "packages",
    "vitest.config.ts"
  ],
}